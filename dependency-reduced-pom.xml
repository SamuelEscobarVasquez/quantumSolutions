<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.quantum.solutions</groupId>
  <artifactId>quantumsolutions</artifactId>
  <name>quantum-solutions</name>
  <version>1.0.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>${maven.compiler.release}</release>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${shade.plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.quantum.solutions.quantumsolutions.MainApplication</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>${jpackage.plugin.version}</version>
        <executions>
          <execution>
            <id>package-win</id>
            <phase>package</phase>
            <goals>
              <goal>jpackage</goal>
            </goals>
            <configuration>
              <name>EmpleadosApp</name>
              <mainJar>${project.build.finalName}.jar</mainJar>
              <mainClass>org.quantum.solutions.quantumsolutions.MainApplication</mainClass>
              <input>${project.build.directory}</input>
              <type>EXE</type>
              <destination>${project.build.directory}/installer</destination>
              <addModules>java.base,javafx.controls,javafx.fxml</addModules>
              <winConsole>false</winConsole>
              <winDirChooser>true</winDirChooser>
              <winMenu>true</winMenu>
              <icon>src/main/resources/img/icono.ico</icon>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.release>17</maven.compiler.release>
    <maven.compiler.target>17</maven.compiler.target>
    <jpackage.plugin.version>1.6.6</jpackage.plugin.version>
    <shade.plugin.version>3.5.0</shade.plugin.version>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>17.0.6</javafx.version>
  </properties>
</project>
